{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "git status": "allow",
      "git diff": "allow", 
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git show": "allow",
      "git show *": "allow",
      "git branch": "allow",
      "git branch -l": "allow",
      "git branch --list": "allow",
      "ls": "allow",
      "pwd": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "grep *": "allow",
      "find *": "allow",
      "which *": "allow",
      "git add *": "ask",
      "git commit *": "ask",
      "git push *": "ask",
      "git pull *": "ask",
      "git merge *": "ask",
      "git rebase *": "ask",
      "git reset *": "ask",
      "git checkout *": "ask",
      "git switch *": "ask",
      "git stash *": "ask",
      "git branch -d *": "ask",
      "git branch -D *": "ask",
      "git tag -d *": "ask",
      "git push --force *": "ask",
      "git push -f *": "ask",
      "git reset --hard *": "ask",
      "git clean -f *": "ask",
      "git clean -fd *": "ask",
      "rm *": "ask",
      "rm -rf *": "ask",
      "sudo *": "ask",
      "*": "allow"
    }
  }
}