{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "webfetch": "allow",
    "bash": {
      "git add *": "ask",
      "git commit *": "ask",
      "git push *": "ask",
      "git pull *": "ask",
      "git merge *": "ask",
      "git rebase *": "ask",
      "git reset *": "ask",
      "git checkout *": "ask",
      "git switch *": "ask",
      "git stash *": "ask",
      "git branch -d *": "ask",
      "git branch -D *": "ask",
      "git tag -d *": "ask",
      "git push --force *": "ask",
      "git push -f *": "ask",
      "git reset --hard *": "ask",
      "git clean -f *": "ask",
      "git clean -fd *": "ask",
      "rm *": "ask",
      "rm -rf *": "ask",
      "sudo *": "ask",
      "*": "allow"
    }
  }
}
